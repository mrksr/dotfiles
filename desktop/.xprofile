#!/bin/sh

##############
#  Settings  #
##############
xsetroot -cursor_name left_ptr
setxkbmap -layout de -variant nodeadkeys
# No beeping
xset -b
# Disable Touchpad
xinput set-prop "$(xinput --list --name-only | grep -i Synaptics | head -n 1)" "Device Enabled" 0

##############
#  Programs  #
##############
redshift -l geoclue2 -t 6300:4500 &
# ~/.bin/gajim_auto_reconnect.sh &
unclutter &

if [[ $DESKTOP_SESSION != *plasma* ]]; then
    # non-plasma configa
    volnoti &
    dex -a -e gnome &
fi
