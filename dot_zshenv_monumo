# Monumo
export LANG="en_GB.utf8" LANGUAGE="en_GB.utf8" LC_ALL="en_GB.utf8"

# Fix for poetry weirdness
export PYTHON_KEYRING_BACKEND=keyring.backends.null.Keyring

# Some XDG folders should be host-local
export BUF_HOME=/buf/markus
export XDG_CACHE_HOME=$BUF_HOME/.cache
export XDG_DATA_HOME=$BUF_HOME/.local/share
export XDG_STATE_HOME=$BUF_HOME/.local/state

typeset -A ZI
ZI[CACHE_DIR]=${XDG_CACHE_HOME}/zi
