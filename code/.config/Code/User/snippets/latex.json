{
	// Place your snippets for latex here. Each snippet is defined under a snippet name and has a prefix, body and
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the
	// same ids are connected.
	// Example:
	// "Print to console": {
	// 	"prefix": "log",
	// 	"body": [
	// 		"console.log('$1');",
	// 		"$2"
	// 	],
	// 	"description": "Log output to console"
	// }
	"mat": {
		"prefix": "ma",
		"body": [
			"\\mat{$1}$0",
		],
		"description": "Matrix notation"
	},
	"todo": {
		"prefix": "todo",
		"body": [
			"\\todo{$0}",
		],
		"description": "Simple todo note"
	},
	"todo inline": {
		"prefix": "todoi",
		"body": [
			"\\todo{$0}",
		],
		"description": "Inline todo note"
	},
	"align": {
		"prefix": "align",
		"body": [
			"\\begin{align}",
			"${0}",
			"\\end{align}",
		],
		"description": "Align environment"
	},
	"split": {
		"prefix": "split",
		"body": [
			"\\begin{split}",
			"${0}",
			"\\end{split}",
		],
		"description": "Split environment"
	},
	"salign": {
		"prefix": "salign",
		"body": [
			"\\begin{align}",
			"\\begin{split}",
			"${0}",
			"\\end{split}",
			"\\end{align}",
		],
		"description": "Align-with-split environment"
	},
	"probability": {
		"prefix": "prob",
		"body": [
			"\\Prob*{$1}$0",
		],
		"description": "Probability notation"
	},
	"variational": {
		"prefix": "variat",
		"body": [
			"\\Variat*{$0}",
		],
		"description": "Variational probability notation"
	},
	"function": {
		"prefix": "fun",
		"body": [
			"\\Fun${1:*}{${2:\\exp}}{${3:x}}",
		],
		"description": "Function application"
	},
	"set": {
		"prefix": "set",
		"body": [
			"\\Set${1:*}{$2}",
		],
		"description": "Set definition"
	},
	"moment": {
		"prefix": "moment",
		"body": [
			"\\Moment${1:*}{${2:\\E}}{${3:x}}",
		],
		"description": "Probabilistic moment"
	},
	"KL": {
		"prefix": "kl",
		"body": [
			"\\KL${1:*}{${2:q}}{${3:p}}",
		],
		"description": "KL divergence"
	},
	"spix": {
		"prefix": "spix",
		"body": [
			"{\\pix{${1:k}}}",
		],
		"description": "Superscript p-index"
	},
	"si": {
		"prefix": "si",
		"body": [
			"\\SI{${1:5}}{${2:\\meter}}",
		],
		"description": "Number with unit"
	},
	"chapter": {
		"prefix": ["cha", "chap"],
		"body": [
			"\\chapter{$1}",
			"\\label{toc:$2}",
			"$0",
		],
		"description": "Chapter with label"
	},
	"section": {
		"prefix": "sec",
		"body": [
			"\\section{$1}",
			"\\label{toc:$2}",
			"$0",
		],
		"description": "Section with label"
	},
	"subsection": {
		"prefix": "sub",
		"body": [
			"\\subsection{$1}",
			"\\label{toc:$2}",
			"$0",
		],
		"description": "Sub-Section with label"
	},
	"subsubsection": {
		"prefix": "subsub",
		"body": [
			"\\subsubsection{$1}",
			"$0",
		],
		"description": "Sub-Sub-Section"
	},
	"paragraph": {
		"prefix": "par",
		"body": [
			"\\paragraph{$1}",
        ]
	},
	"environment": {
		"prefix": "begin",
		"body": [
			"\\begin{$1}",
			"\t$0",
			"\\end{$1}",
		],
		"description": "A generic environment"
	},
	"itemize": {
		"prefix": "itemize",
		"body": [
			"\\begin{itemize}",
			"\t\\item $0",
			"\\end{itemize}",
		],
		"description": "An itemize environment"
	},
	"emph": {
		"prefix": ["em", "emph"],
		"body": [
			"\\emph{$1}$0",
		],
		"description": "Emphasize"
	},
	"inlinemath": {
		"prefix": "im",
		"body": [
			"\\$$1\\$$0",
		],
		"description": "Inline Math",
	},
	"textcite": {
		"prefix": ["textcite", "tcite"],
		"body": [
			"\\textcite{$1}$0",
		],
		"description": "In-text citation",
	},
	"parencite": {
		"prefix": ["parencite", "pcite"],
		"body": [
			"\\parencite{$1}$0",
		],
		"description": "Parenthesis citation",
	},
	"cref": {
		"prefix": "cref",
		"body": [
			"\\cref{$1}$0",
		],
		"description": "Cleveref reference",
	},
	"parentheses": {
		"prefix": ["lr(", "lrp"],
		"body": [
			"\\left($1\\right)$0",
		],
		"description": "Auto-sized parentheses",
	},
	"braces": {
		"prefix": ["lr{", "lrb"],
		"body": [
			"\\left\\{$1\\right\\}$0",
		],
		"description": "Auto-sized braces",
	},
	"definition": {
		"prefix": ["def", "definition"],
		"body": [
            "\\begin{definition}[${1:title}]",
            "\\label{${2:def:}}",
            "$0",
			"\\end{definition}",
		],
		"description": "Definition block",
	},
	"problem": {
		"prefix": ["probl", "problem"],
		"body": [
            "\\begin{problem}[${1:title}]",
            "\\label{${2:prob:}}",
            "$0",
			"\\end{problem}",
		],
		"description": "Problem block",
	},
}
