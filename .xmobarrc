Config {
      font = "xft:Ubuntu Mono-10"
    , bgColor = "#000000"
    , fgColor = "#eeeeec"
    , position = Static { xpos = 0, ypos = 0, width = 1823, height = 16 }
    , commands = [
             Run Date "%a, %_d. %b %k:%M" "date" 10
           , Run Weather "EDDM" ["-t", "<station>: <tempC>C"] 300
           , Run ThermalZone 0 [
                  "-t","<temp>°C"
                , "-L", "68"
                , "-H", "80"
                ] 10
           , Run Brightness ["-t", "<percent>%"] 5
           , Run DynNetwork [
                 "-L", "16"
                ,"-H", "96"
                ,"--normal", "green"
                ,"--high", "red"
                ] 25
           , Run BatteryP ["BAT0"] [
                  "-t", "<acstatus><left>% - <timeleft>"
                , "-L", "10", "-H", "80", "-p", "3"
                , "--"
                , "-O", "<fc=green>AC</fc> - "
                , "-i", "<fc=green>AC</fc> - "
                , "-o", ""
                , "-L", "-15", "-H", "-5"
                , "-l", "red", "-m", "blue", "-h", "green"
                ] 10
           -- , Run Com "/home/markus/.xmonad/xmobar_mpd.py" [] "music" 5
           , Run Com "/home/markus/.xmonad/xmobar_volume.sh" [] "volume" 5
           , Run Mail [
                  ("markus:", "~/Mail/zfix-markus/INBOX")
                , ("intum:", "~/Mail/intum/INBOX")
                , ("tum:", "~/Mail/tum/INBOX")
                ] "mail"
           , Run StdinReader
           ]
    , sepChar  = "%"
    , alignSep = "}{"
    , template = "%StdinReader%}{ %mail% <fc=#888888>λ</fc> %volume% <fc=#888888>λ</fc> %dynnetwork% <fc=#888888>λ</fc> %battery% <fc=#888888>λ</fc> %thermal0% <fc=#888888>λ</fc> %bright% <fc=#888888>λ</fc> %date%"
}

