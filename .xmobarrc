Config {
    font = "xft:Ubuntu Mono-10"
  , bgColor = "#000000"
  , fgColor = "#eeeeec"
  , position = Static { xpos = 0, ypos = 0, width = 1767, height = 16 }
  , commands = [
                 Run Date "%a, %b %_d %k:%M" "date" 10
               --, Run Weather "EDDM" ["-t", "<station>: <tempC>C"] 300
               , Run Brightness ["-t", "D: <percent>%"] 2
               , Run DynNetwork ["-L","0","-H","32","--normal","green","--high","red"] 100
               , Run BatteryP ["BAT0"]
                 ["-t", "<acstatus><left>% - <timeleft>",
                  "-L", "10", "-H", "80", "-p", "3",
                  "--", "-O", " <fc=green>AC</fc> - ", "-o", "",
                  "-L", "-15", "-H", "-5",
                  "-l", "red", "-m", "blue", "-h", "green"] 60
               , Run Com "python" ["~/.xmonad/xmobar_mpd.py"] "music" 10
               , Run StdinReader
               ]
  , sepChar  = "%"
  , alignSep = "}{"
  , template = "%StdinReader% }{ %music% <fc=#888888>λ</fc> %dynnetwork% <fc=#888888>λ</fc>%battery% <fc=#888888>λ</fc> %date%"
  }

-- vim: set ft=haskell:
