[general]
# List of accounts to be synced, separated by a comma.
accounts = markus,pub,tutor,game,intum,tum,kth
maxsyncaccounts = 10
pythonfile = ~/.offlineimaprc.pass.py
ui = quiet

############
#  Markus  #
############
[Account markus]
autorefresh = 2
quick = 10
localrepository = zfix-markus-local
remoterepository = zfix-markus-remote
status_backend = sqlite
postsynchook = notmuch new

[Repository zfix-markus-local]
type = Maildir
localfolders = ~/Mail/zfix-markus

[Repository zfix-markus-remote]
type = IMAP
remotehost = imap.zfix.org
ssl = yes
sslcacertfile = /etc/ssl/cert.pem
remoteuser = markus@zfix.org
remotepasseval = get_password("markus", "zfix.org")
keepalive = 60
holdconnectionopen = yes

