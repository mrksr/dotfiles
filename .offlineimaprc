[general]
# List of accounts to be synced, separated by a comma.
accounts = markus,pub,tutor,game

############
#  Markus  #
############
[Account markus]
localrepository = zfix-markus-local
remoterepository = zfix-markus-remote
status_backend = sqlite

[Repository zfix-markus-local]
type = Maildir
localfolders = ~/Mail/zfix-markus

[Repository zfix-markus-remote]
type = IMAP
remotehost = zfix.org
transporttunnel = openssl s_client -host zfix.org -port 993 -quiet
remoteuser = markus@zfix.org
remotepassfile = ~/.offlineimap.pass.markus

#########
#  Pub  #
#########
